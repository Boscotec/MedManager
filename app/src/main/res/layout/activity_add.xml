<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".AddMedicationActivity">

    <include layout="@layout/toolbar" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:hint="@string/input_name"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <EditText
       android:id="@+id/description"
       android:hint="@string/input_description"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:inputType="text"
       android:textColor="@color/colorBlack"
       android:textSize="16sp"
       android:maxLines="3"
       android:ellipsize="end" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/interval"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_width="150dp"
            app:np_height="50dp"
            app:np_orientation="horizontal"
            app:np_dividerColor="@color/colorPrimary"
            app:np_max="24"
            app:np_min="1"
            app:np_value="6"
            app:np_selectedTextColor="@color/colorBlack"
            app:np_selectedTextSize="@dimen/selected_text_size"
            app:np_textColor="@color/colorPrimary"
            app:np_textSize="@dimen/text_size"
            app:np_typeface="@string/roboto_light"
            app:np_wheelItemCount="5"
            app:np_fadingEdgeEnabled="false"
            app:np_wrapSelectorWheel="true" />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" >
        <EditText
            android:id="@+id/startDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/startDate"
            android:inputType="date"
            android:maxLines="1"
            android:enabled="false"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:text="@string/clickHere" />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" >
        <EditText
            android:id="@+id/endDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/endDate"
            android:inputType="date"
            android:maxLines="1"
            android:enabled="false"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

    <Button
        android:id="@+id/btnStopDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="@string/clickHere" />

    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save" />

</LinearLayout>